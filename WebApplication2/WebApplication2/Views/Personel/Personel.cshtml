
@{
    ViewBag.Title = "Personel";
    Layout = "~/Views/Shared/Login.cshtml";
}


<style>

    body {
        background-color: #ffe6f2;
        font-family: "Comic Sans MS", cursive, sans-serif;
        padding-top: 40px;
    }

    .login-form {
        width: 400px;
        margin: 0 auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #ffffff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

        .login-form h2 {
            margin: 0 0 20px;
            color: #ff6b81;
            font-size: 28px;
            text-align: center;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        height: 48px;
        padding: 10px;
        font-size: 18px;
        border: 1px solid #ffb8c6;
        border-radius: 10px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #ff6b81;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 129, 0.25);
        }

    .btn {
        width: 100%;
        height: 48px;
        font-size: 20px;
        font-weight: bold;
        color: #ffffff;
        background-color: #ff6b81;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.15s ease-in-out;
    }

        .btn:hover {
            background-color: #ff4757;
        }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 10px;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

</style>

<div class="login-form">
    <form action="@Url.Action("OgrenciBilgi", "Ogrenci")" method="post">
        <h2 class="text-center">Personel Girişi</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="kullaniciAdi" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Şifre" name="sifre" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
    </form>
</div></div>